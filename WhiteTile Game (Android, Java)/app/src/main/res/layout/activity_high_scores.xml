<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E08119"
    tools:context=".HighScoresActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@mipmap/highscores" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:background="@mipmap/score" />

    <TextView
        android:id="@+id/score1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerInParent="true"
        android:layout_marginTop="160dp"
        android:text="0"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@mipmap/winners" />

    <TextView
        android:id="@+id/score2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView10"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="25dp"
        android:text="0"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/score3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView10"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
       android:layout_marginTop="39dp"
        android:text="0"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_centerInParent="true"
        android:layout_marginTop="170dp"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/backToWelcome"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="19dp"
        android:background="@mipmap/back"
         />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/textView8"
        android:layout_centerInParent="true"
        android:layout_marginTop="98dp"
        android:background="@mipmap/star" />


</RelativeLayout>